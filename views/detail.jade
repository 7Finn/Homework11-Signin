doctype html
html
	head
		meta(charset="utf-8")
		link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
		script(type="text/javascript" src="javascripts/jquery.js")
		script(type="text/javascript" src="javascripts/signout.js")
		title 详情
	body
		div.container
			h1 用户详情
			div.info
				form(id='form')
					div.input-div.blue-div(id='name-div')
						span.span.up-position 用户名
						input.input(value=user.username readonly="true")
					div.input-div.blue-div(id='id-div')
						span.span.up-position 学号
						input.input(value=user.sid readonly="true")
					div.input-div.blue-div(id='phone-div')
						span.span.up-position 电话
						input.input(value=user.phone readonly="true")
					div.input-div.blue-div(id='email-div')
						span.span.up-position 邮箱
						input.input(value=user.email readonly="true")
				a.button(id='signout' href="/signout") 退出登录
